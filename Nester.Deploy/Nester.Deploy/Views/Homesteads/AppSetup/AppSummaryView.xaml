                          Style="{StaticResource nesterListInfoLabelTiny}"
                          >                    
                  </Label>

                  <Label Grid.Row="1" Grid.Column="0"
                          Text="{Binding ServicesViewModel.SelectedStorageService.FeaturesIncluded[0]}"
                          Style="{StaticResource nesterListInfoBodyTiny}"
                  >                                              
                  </Label>

                  <!-- Optimization -->
                      
                  <Label Grid.Row="0" Grid.Column="1"
                          Text="{Binding ServicesViewModel.SelectedStorageService.FeaturesAll[1]}"
                          Style="{StaticResource nesterListInfoLabelTiny}"
                          >
                  </Label>

                  <Label Grid.Row="1" Grid.Column="1"
                          Text="{Binding ServicesViewModel.SelectedStorageService.FeaturesIncluded[1]}"
                          Style="{StaticResource nesterListInfoBodyTiny}" 
                  >
                  </Label>

                  <!-- Backup -->
                      
                  <Label Grid.Row="0" Grid.Column="2"
                          Text="{Binding ServicesViewModel.SelectedStorageService.FeaturesAll[2]}"
                          Style="{StaticResource nesterListInfoLabelTiny}"
                          >
                  </Label>

                  <Label Grid.Row="1" Grid.Column="2"
                          Text="{Binding ServicesViewModel.SelectedStorageService.FeaturesIncluded[2]}"
                          Style="{StaticResource nesterListInfoBodyTiny}"                        
                  >
                  </Label>

                  <!-- Price -->
                      
                  <Label Grid.Row="0" Grid.Column="3" x:Name="StorageServiceCost"
                          Text="{Binding ServicesViewModel.SelectedStorageService.Cost, StringFormat='{0:C2}'}"
                          Style="{StaticResource nesterListInfoLabelTiny}"
                          >
                  </Label>

                  <Label Grid.Row="1" Grid.Column="3"
                          Text="{Binding ServicesViewModel.SelectedStorageService.Period}"
                          Style="{StaticResource nesterListInfoBodyTiny}"                             
                          >
                  </Label>

              </Grid>

            </Grid>
            <Frame Grid.Row="1" OutlineColor="#E4E4E4" HasShadow="True" HeightRequest="1"/>
          </Grid>
        
          <!-- Track Service -->
          
          <Grid>            
            <Grid.RowDefinitions>
              <RowDefinition Height="*" />
              <RowDefinition Height="1" />
            </Grid.RowDefinitions>
            
            <Grid>
              
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25*" />
                <ColumnDefinition Width="15*" /> 
                <ColumnDefinition Width="65*" />
              </Grid.ColumnDefinitions>

              <StackLayout Grid.Column="0">
                <Label Grid.Column="0" Text="{Binding ServicesViewModel.SelectedTrackService.ProvidedBy}"
                    Style="{StaticResource nesterInfoLabelMinor}">
                </Label>               
              </StackLayout>
               
              <StackLayout Grid.Column="1">
                <Label Text="{Binding ServicesViewModel.SelectedTrackService.Name, Converter={StaticResource i18n}}"

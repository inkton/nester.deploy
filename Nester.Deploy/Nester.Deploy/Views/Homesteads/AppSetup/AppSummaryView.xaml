                </Label>               
              </StackLayout>
               
              <StackLayout Grid.Column="1">
                <Label Text="{Binding ServicesViewModel.SelectedMonitorService.Name, Converter={StaticResource i18n}}"
                    Style="{StaticResource nesterInfoLabelMinor}">
                </Label>                
                <Label Text="{Binding ServicesViewModel.SelectedMonitorService.Type, Converter={StaticResource i18n}}"
                    Style="{StaticResource nesterInfoLabelMinor}">
                </Label>
              </StackLayout>
                
              <Grid Grid.Column="2"
                BackgroundColor="{StaticResource tableBackColor}"
                Padding="5,5,0,0">

                <Grid.RowDefinitions>
                  <RowDefinition Height="*" />
                  <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30*" />
                    <ColumnDefinition Width="35*" />
                    <ColumnDefinition Width="15*" />
                    <ColumnDefinition Width="20*" />
                </Grid.ColumnDefinitions>

                  <!-- Configuration -->
                      
                  <Label Grid.Row="0" Grid.Column="0"
                          Text="{Binding ServicesViewModel.SelectedMonitorService.FeaturesAll[0]}"
                          Style="{StaticResource nesterListInfoLabelTiny}"
                          >                    
                  </Label>

                  <Label Grid.Row="1" Grid.Column="0"
                          Text="{Binding ServicesViewModel.SelectedMonitorService.FeaturesIncluded[0]}"
                          Style="{StaticResource nesterListInfoBodyTiny}"
                  >                                              
                  </Label>

                  <!-- Optimization -->
                      
                  <Label Grid.Row="0" Grid.Column="1"
                          Text="{Binding ServicesViewModel.SelectedMonitorService.FeaturesAll[1]}"
                          Style="{StaticResource nesterListInfoLabelTiny}"
                          >
                  </Label>

                  <Label Grid.Row="1" Grid.Column="1"
                          Text="{Binding ServicesViewModel.SelectedMonitorService.FeaturesIncluded[1]}"
                          Style="{StaticResource nesterListInfoBodyTiny}" 
                  >
                  </Label>

                  <!-- Backup -->
                      
                  <Label Grid.Row="0" Grid.Column="2"
                          Text="{Binding ServicesViewModel.SelectedMonitorService.FeaturesAll[2]}"
                          Style="{StaticResource nesterListInfoLabelTiny}"
                          >
                  </Label>

                  <Label Grid.Row="1" Grid.Column="2"
                          Text="{Binding ServicesViewModel.SelectedMonitorService.FeaturesIncluded[2]}"
                          Style="{StaticResource nesterListInfoBodyTiny}"                        
                  >
                  </Label>

                  <!-- Price -->
                      
                  <Label Grid.Row="0" Grid.Column="3" x:Name="MonitorServiceCost"
                          Text="{Binding ServicesViewModel.SelectedMonitorService.Cost, StringFormat='$ {0}'}"
                          Style="{StaticResource nesterListInfoLabelTiny}"
                          >
                  </Label>

                  <Label Grid.Row="1" Grid.Column="3"
                          Text="{Binding ServicesViewModel.SelectedMonitorService.Period}"
                          Style="{StaticResource nesterListInfoBodyTiny}"                             
                          >
                  </Label>

              </Grid>

            </Grid>
            <Frame Grid.Row="1" OutlineColor="#E4E4E4" HasShadow="True" HeightRequest="1"/>
          </Grid>
          
          <!-- Domain Service -->
          
          <Grid>
            <Grid.RowDefinitions>
              <RowDefinition Height="*" />
              <RowDefinition Height="1" />
            </Grid.RowDefinitions>
            
            <Grid>
              
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25*" />
                <ColumnDefinition Width="15*" /> 
                <ColumnDefinition Width="65*" />
              </Grid.ColumnDefinitions>

              <StackLayout Grid.Column="0">
                <Label Grid.Column="0" Text="{Binding ServicesViewModel.SelectedDomainService.ProvidedBy}"
                    Style="{StaticResource nesterInfoLabelMinor}">
                </Label>               
              </StackLayout>
               
              <StackLayout Grid.Column="1">
                <Label Text="{Binding ServicesViewModel.SelectedDomainService.Name, Converter={StaticResource i18n}}"
                    Style="{StaticResource nesterInfoLabelMinor}">
                </Label>                
                <Label Text="{Binding ServicesViewModel.SelectedDomainService.Type, Converter={StaticResource i18n}}"
                    Style="{StaticResource nesterInfoLabelMinor}">
                </Label>
              </StackLayout>
                
              <Grid Grid.Column="2"
                BackgroundColor="{StaticResource tableBackColor}"
                Padding="5,5,0,0">

                <Grid.RowDefinitions>
                  <RowDefinition Height="*" />
                  <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30*" />
                    <ColumnDefinition Width="50*" />
                    <ColumnDefinition Width="20*" />
                </Grid.ColumnDefinitions>

                  <!-- Register -->
                      
                  <Label Grid.Row="0" Grid.Column="0"
                          Text="{Binding ServicesViewModel.SelectedDomainService.FeaturesAll[0]}"
                          Style="{StaticResource nesterListInfoLabelTiny}"
                          >                    
                  </Label>

                  <Label Grid.Row="1" Grid.Column="0"
                          Text="{Binding ServicesViewModel.SelectedDomainService.FeaturesIncluded[0]}"

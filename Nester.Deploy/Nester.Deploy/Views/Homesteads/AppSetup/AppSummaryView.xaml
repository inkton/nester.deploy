                          >
                  </Label>

                  <Label Grid.Row="1" Grid.Column="2"
                          Text="{Binding ServicesViewModel.SelectedDomainService.Period}"
                          Style="{StaticResource nesterListInfoBodyTiny}"                             
                          >
                  </Label>

              </Grid>

            </Grid>
            <Frame Grid.Row="1" OutlineColor="#E4E4E4" HasShadow="True" HeightRequest="1"/>
          </Grid>

          <!-- Totals -->
          
          <Grid>
            <Grid.RowDefinitions>
              <RowDefinition Height="*" />
              <RowDefinition Height="1" />
            </Grid.RowDefinitions>
            
            <Grid>
              
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25*" />
                <ColumnDefinition Width="15*" /> 
                <ColumnDefinition Width="65*" />
              </Grid.ColumnDefinitions>

              <StackLayout Grid.Column="0">
                <Label Text="-"
                    Style="{StaticResource nesterInfoLabelMinor}">
                </Label>                
                <Label Text="-"
                    Style="{StaticResource nesterInfoLabelMinor}">
                </Label>             
              </StackLayout>
               
              <StackLayout Grid.Column="1">
                <Label Text="-"
                    Style="{StaticResource nesterInfoLabelMinor}">
                </Label>                
                <Label Text="-"
                    Style="{StaticResource nesterInfoLabelMinor}">
                </Label>
              </StackLayout>
                
              <Grid Grid.Column="2"
                Padding="5,5,0,0">

                <Grid.RowDefinitions>
                  <RowDefinition Height="*" />
                  <RowDefinition Height="*" />
                  <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30*" />
                    <ColumnDefinition Width="50*" />
                    <ColumnDefinition Width="20*" />
                </Grid.ColumnDefinitions>

                  <!-- Title -->
                      
                  <Label Grid.Row="0" Grid.Column="0"
                          Text="Discount" Style="{StaticResource nesterListInfoLabelTiny}">                    
                  </Label>

                  <Label Grid.Row="1" Grid.Column="0"
                          Text="Total" Style="{StaticResource nesterListInfoBodyTiny}">                                              
                  </Label>

                  <Label Grid.Row="2" Grid.Column="0" x:Name="AdditionalInfo"
                          Grid.ColumnSpan = "3" Style="{StaticResource nesterListInfoLabelTiny}">
                  </Label>
                  
                  <!-- Price -->
                      
                  <Label Grid.Row="0" Grid.Column="2" x:Name="DiscountTotal"
                          Style="{StaticResource nesterListInfoLabelTiny}">
                  </Label>

                  <Label Grid.Row="1" Grid.Column="2" x:Name="Total"
                          Style="{StaticResource nesterListInfoBodyTiny}">
                  </Label>
                  
              </Grid>

            </Grid>
            <Frame Grid.Row="1" OutlineColor="#E4E4E4" HasShadow="True" HeightRequest="1"/>
          </Grid>
          
      </StackLayout>

    </ScrollView>
    
    <Grid Grid.Row="4" Grid.Column="1">
      <Grid.RowDefinitions>
        <RowDefinition Height="*" />
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="60*" />
        <ColumnDefinition Width="40*" />
      </Grid.ColumnDefinitions>

      <StackLayout Padding="5,5,5,5" Grid.Row="0" Grid.Column="0" HorizontalOptions="FillAndExpand" VerticalOptions="Center">

        <Label Text="Please Note:" Style="{StaticResource nesterListInfoBodyMinor}"></Label>
        <Label x:Name="DeployWarning"
          HorizontalOptions="FillAndExpand"
          VerticalOptions="FillAndExpand"
          Style="{StaticResource nesterInfodataMinor}" >
        </Label>
        <!--<StackLayout Orientation="Horizontal" VerticalOptions="Center">
            <Label IsVisible="{Binding EditApp.IsDeployed}" Text="Create a backup beforehand" TextColor="#22313F" VerticalOptions="Center"></Label>
            <Switch x:Name="BackupFirst" IsToggled="True" IsVisible="{Binding EditApp.IsDeployed}" VerticalOptions="Center">
            </Switch>
        </StackLayout>-->
       </StackLayout>

      <StackLayout Padding="5,5,5,5" Grid.Row="0" Grid.Column="1" HorizontalOptions="FillAndExpand" VerticalOptions="Center">
        <Picker x:Name="SoftwareVersion" Title="Software Version" SelectedIndex="0"
                Style="{StaticResource nesterFieldLabelPicker}"
                HorizontalOptions="FillAndExpand">
        </Picker>
        <Button x:Name="ButtonDone"
              HorizontalOptions="FillAndExpand"
              Text="Deploy"
              BorderColor="{StaticResource noteColor}"
              BackgroundColor="{StaticResource noteColor}"
              TextColor="White"
              Style="{StaticResource buttonPageFlow}"
              Clicked="OnDoneButtonClickedAsync">
        </Button>
        <Button x:Name="ButtonCancel"       
              HorizontalOptions="FillAndExpand"
              Text="Close"
              BorderColor="{StaticResource noteColor}"
              BackgroundColor="{StaticResource noteColor}"
              TextColor="White"
              Style="{StaticResource buttonPageFlow}"
              Clicked="OnCancelButtonClickedAsync">
        </Button>
      </StackLayout>

    </Grid>

  </Grid>

</views:View>
